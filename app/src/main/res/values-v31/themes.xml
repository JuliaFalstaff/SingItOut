<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeSingItOut" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/velvet</item>
        <item name="colorPrimaryVariant">@color/dark_velvet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nude</item>
        <item name="colorSecondaryVariant">@color/nude</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeSingItOut.DarkSearchView">
        <item name="colorControlNormal">@color/nude</item>
        <item name="hintTextColor">@color/pastel</item>
        <item name="android:editTextColor">@color/nude</item>
        <item name="android:textColorHint">@color/pastel</item>
        <item name="android:textColor">@color/nude</item>
    </style>

    <style name="ThemeSingItOut.SplashScreenStyle" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/velvet</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/ThemeSingItOut</item>
    </style>
</resources>

